{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "autoReload": {
                "enable": true
            },
            "pythonPath": "/opt/homebrew/bin/python3.11",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "subProcess": true,
            "stopOnEntry": false
        },
        {
            "name": "FastAPI Alternative",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "autoReload": {
                "enable": true
            },
            "pythonPath": "/opt/homebrew/bin/python3.11",
            "stopOnEntry": false
        }
    ]
}
